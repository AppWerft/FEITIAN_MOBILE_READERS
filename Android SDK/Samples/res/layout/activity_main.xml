<ScrollView  
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:scrollbars="vertical"  
    android:fadingEdge="vertical">  
    
    <!--  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.kawatest.MainActivity" -->
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content">
   		
        <Button
            android:id="@+id/clear"
	        android:text="clear"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
        
         <Button
            android:id="@+id/exit"
	        android:text="exit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
        
   		<Button
            android:id="@+id/jni"
	        android:text="PC/SC API"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
   		
   		<Button
            android:id="@+id/jar"
	        android:text="Private API"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
	</LinearLayout>
    
  	<View
		android:layout_height="3px" 
		android:layout_width="match_parent"
		android:background="#66CCFF"/>
    
     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content">
   		
   		
   		
   		<Button
            android:id="@+id/USBMODE"
	        android:text="USB Mode"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
   		
   		<Button
            android:id="@+id/BTMODE"
	        android:text="Bluetooth 3.0 Mode"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
   		
   		<Button
            android:id="@+id/BLEMODE"
	        android:text="BLE Mode"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
		
	</LinearLayout>
    
	<View
		android:layout_height="3px" 
		android:layout_width="match_parent"
		android:background="#66CCFF"/>
	
   <LinearLayout
         android:id="@+id/pcsc_area"
        android:orientation="vertical"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:visibility="gone">
	
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		>
        <Button
            android:id="@+id/button21"
	        android:text="SCardEstablishContext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"
	       
	        />
        <Button
            android:id="@+id/button22"
	        android:text="SCardListReaders"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"
	        
	        />
        <Spinner
			android:id="@+id/spinnerC_14"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:textSize="8dp"
			/>
	</LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		>
        
        <Button
            android:id="@+id/button31"
	        android:text="SCardConnect"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"
	       
	        />
        <Button
            android:id="@+id/button32"
	        android:text="SCardStatus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"
	       
	        />
      
        <Button
            android:id="@+id/button33"
	        android:text="SCardDisconnect"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"
	        
	        />
        <Button
            android:id="@+id/button34"
	        android:text="SCardReleaseContext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"
	        
	        />
        
	</LinearLayout>

  
    
     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content">
        
           <Button
            android:id="@+id/button41"
	        android:text="SCardTransmit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
           
           <EditText
              android:id="@+id/apdu"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="top"
              android:textSize="20dp"
              android:text="0084000008" />
           
           
	</LinearLayout>
    </LinearLayout>
    
     
      <LinearLayout
         android:id="@+id/jar_area"
        android:orientation="vertical"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:visibility="gone">

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content">
		
        <Button
            android:id="@+id/ft_find"
	        android:text="ft_find"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
			
        <Button
			android:id="@+id/ft_open"
	        android:text="ft_open"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
			
        <Button
			android:id="@+id/ft_close"
	        android:text="ft_close"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
			
        <Spinner
			android:id="@+id/spinner_jar"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:textSize="8dp"/>
	</LinearLayout>    
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content">
		
        <Button
            android:id="@+id/ft_poweron"
	        android:text="ft_poweron"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
			
        <Button
			android:id="@+id/ft_poweroff"
	        android:text="ft_poweroff"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
			
        <Button
			android:id="@+id/ft_xfr"
	        android:text="ft_xfr"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
			
        <Button
			android:id="@+id/slotStatus"
	        android:text="slotStatus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
        
         <Button
			android:id="@+id/readerInfo"
	        android:text="readerInfo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="8dp"/>
         
	</LinearLayout>    
    </LinearLayout>
     
      
  
    
	
	<View
		android:layout_height="3px" 
		android:layout_width="match_parent"
		android:background="#66CCFF"/>
    

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />
    

</LinearLayout>

</ScrollView> 
